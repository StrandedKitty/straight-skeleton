{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es6",
			"dom"
		],
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,

		"noUnusedLocals": true,
		"downlevelIteration": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitAny": true
	},
	"include": [
		"src/lib"
	]
}